<div class="daily-quote py-5" style="background-color: var(--color-paper-dark);">
  <div class="container text-center">
    <blockquote class="quote-text">
      "{{ section.settings.quote }}"
    </blockquote>
    <cite class="quote-author">- {{ section.settings.author }}</cite>
  </div>
</div>

<style>
  .quote-text {
    font-family: var(--font-heading);
    font-size: 1.5rem;
    font-style: italic;
    color: var(--color-primary);
    margin-bottom: var(--spacing-sm);
  }
  .quote-author {
    font-weight: 600;
    color: var(--color-gold);
  }
</style>


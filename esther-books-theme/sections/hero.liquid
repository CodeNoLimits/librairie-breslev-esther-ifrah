<div class="hero-section" style="background-image: url({{ section.settings.image | image_url: width: 2000 }});">
  <div class="container hero-content">
    <h1 class="hero-title">{{ section.settings.heading }}</h1>
    <div class="hero-text">{{ section.settings.text }}</div>
    {% if section.settings.button_link != blank %}
      <a href="{{ section.settings.button_link }}" class="btn hero-btn">{{ section.settings.button_label }}</a>
    {% endif %}
  </div>
</div>

<style>
  .hero-section {
    background-size: cover;
    background-position: center;
    padding: 100px 0;
    color: white;
    position: relative;
  }
  .hero-section::before {
    content: '';
    position: absolute;
    top: 0; left: 0; right: 0; bottom: 0;
    background: rgba(0,0,0,0.4);
  }
  .hero-content {
    position: relative;
    z-index: 1;
    text-align: center;
    max-width: 800px;
  }
  .hero-title {
    color: white;
    font-size: 3rem;
    margin-bottom: var(--spacing-md);
  }
  .hero-text {
    font-size: 1.2rem;
    margin-bottom: var(--spacing-lg);
  }
</style>

{% schema %}
{
  "name": "Hero",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Background Image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "DÃ©couvrez la Sagesse"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Text",
      "default": "<p>Les livres de Rabbi Nachman de Breslev.</p>"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "Parcourir la librairie"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    }
  ],
  "presets": [
    {
      "name": "Hero"
    }
  ]
}
{% endschema %}
